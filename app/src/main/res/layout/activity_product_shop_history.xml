<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"

    tools:context=".ProductShopHistoryActivity">

    <TextView
        android:id="@+id/tvProductShopTitle"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:text="Purchased on: "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductShopDate"
        android:layout_width="368dp"
        android:layout_height="67dp"
        android:paddingTop="12dp"
        android:text="Date"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductShopTitle" />

    <TextView
        android:id="@+id/tvProductShopPrice"
        android:layout_width="367dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:paddingTop="12dp"
        android:text="Product price"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductShopDate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_shop_history_items"
        android:layout_width="388dp"
        android:layout_height="457dp"
        android:layout_marginTop="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductShopPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>