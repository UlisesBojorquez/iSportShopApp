<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"

    tools:context=".ProductShopHistoryActivity">

    <TextView
        android:id="@+id/tvProductShopTitle"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="31dp"
        android:paddingTop="12dp"
        android:text="Pusrchased on: "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/tvProductShopPrice"
        app:layout_constraintEnd_toStartOf="@+id/tvProductShopDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductShopDate"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginBottom="35dp"
        android:paddingTop="12dp"
        android:text="Date"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/tvProductShopPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductShopPrice"
        android:layout_width="367dp"
        android:layout_height="58dp"
        android:paddingTop="12dp"
        android:text="Product price"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_shop_history_items"
        android:layout_width="400dp"
        android:layout_height="532dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductShopPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>